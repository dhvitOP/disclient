{
  "compilerOptions": {
    "target": "es2021",                             
    "module": "commonjs",         
    "declaration": true,                    
    "declarationMap": false,                   
    "sourceMap": false,                           
    "outDir": "./lib",                                            
    "downlevelIteration": true,                 
    "strict": true,                               
    "esModuleInterop": true,                      
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}
